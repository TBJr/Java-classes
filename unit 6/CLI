import java.util.Scanner;

public class LibraryCatalogApp {
    public static void main(String[] args) {
        Catalog<LibraryItem> catalog = new Catalog<>();
        Scanner scanner = new Scanner(System.in);
        String command;

        while (true) {
            System.out.println("Enter command (add, remove, view, display, exit): ");
            command = scanner.nextLine();

            switch (command.toLowerCase()) {
                case "add":
                    System.out.println("Enter title: ");
                    String title = scanner.nextLine();
                    System.out.println("Enter author: ");
                    String author = scanner.nextLine();
                    System.out.println("Enter itemID: ");
                    String itemID = scanner.nextLine();
                    catalog.addItem(new LibraryItem(title, author, itemID));
                    break;
                case "remove":
                    System.out.println("Enter itemID to remove: ");
                    String removeID = scanner.nextLine();
                    catalog.removeItem(removeID);
                    break;
                case "view":
                    System.out.println("Enter itemID to view: ");
                    String viewID = scanner.nextLine();
                    LibraryItem item = catalog.getItem(viewID);
                    if (item != null) {
                        System.out.println(item);
                    }
                    break;
                case "display":
                    catalog.displayItems();
                    break;
                case "exit":
                    System.out.println("Exiting...");
                    scanner.close();
                    return;
                default:
                    System.out.println("Invalid command.");
            }
        }
    }
}
